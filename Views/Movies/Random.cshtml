
@model vidly.ViewModels.RandomViewModelMovie
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*    
    this is comments section

*@
@{
    //To create a block of Razor code
    //that contains UI logic
    //This code may be mixed with HTML
    var className = Model.Customers.Count > 1 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name Movie</h2>

@if (Model.Customers.Count == 0)
{

    <text>No one has rented this movie before!</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>Customer @customer.Id is @customer.Name</li>
        }
    </ul>

}

