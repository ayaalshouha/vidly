@model IEnumerable<vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-box">
    <header>

        <h2>Movies</h2>
        <a class="btn btn-primary" href=" @Url.Action("New", "Movies")">
            Add New Movie
        </a>
    </header>


    @if (!Model.Any())
    {
        <p>We don't have any movies yet.</p>
    }
    else
    {
        <table id="movies" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @movie.Id
                        </td>
                        <td>
                            @movie.Name
                        </td>
                        <td>
                            @movie.Genre.Title
                        </td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Edit", "Movies", new {id = movie.Id})">
                                Edit
                            </a>
                            <button data-movie-id="@movie.Id" class="btn btn-danger js-delete">
                                Delete
                            </button>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
    }

</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#movies").DataTable();
             $("#movies").on("click",".js-delete", function () {
                 var button = $(this);
                 bootbox.confirm({
                     title: "Confirm",
                     message: "Are you sure you want to delete this movie?", 
                     callback: function (result) {
                         if (result) {
                             $.ajax({
                                 url: '/api/movies/' + button.attr("data-movie-id") , 
                                 method: 'DELETE', 
                                 success: function () {
                                     button.closest('tr').remove();
                                 }
                             })
                         }
                     }
                 })
             })
        })

    </script>
    }
