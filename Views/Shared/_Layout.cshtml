<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link rel="stylesheet" href="~/CSS/style.css" asp-append-version="true" />
   

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_NavBar")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vidly</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script> <!-- Then Bootstrap -->
    <script src="~/Scripts/respond.js"></script> <!-- Followed by Respond.js -->
    <script src="~/Scripts/bootbox.js"></script> <!-- Bootbox.js -->
    <script src="~/Scripts/DataTables/jquery.datatables.js"></script> <!-- DataTables -->
    <script src="~/Scripts/DataTables/datatables.bootstrap.js"></script> <!-- DataTables Bootstrap Integration -->
    @*@Scripts.Render("~/bundles/lib")*@
    @RenderSection("scripts", required: false)
</body>
</html>
